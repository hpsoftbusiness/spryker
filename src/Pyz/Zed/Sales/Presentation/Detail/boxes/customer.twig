{% embed '@Gui/Partials/widget.twig' with { widget_title: 'Customer' | trans } %}
    {% block widget_content %}
        <div class="row">
            <div class="col-xs-12 col-md-4">
                <dl>
                    <dt>{{ 'Reference' | trans }}</dt>
                    <dd><a href="{{ url('/customer/view', {'id-customer': order.fkCustomer}) }}" target="_blank">{{ order.customerReference }}</a></dd>
                    <dt>{{ 'Name' | trans }}</dt>
                    <dd>{{ order.firstName ~ ' ' ~ order.lastName }}</dd>
                    <dt>{{ 'Email' | trans }}</dt>
                    <dd>{{ order.email }}</dd>
                    <dt>{{ 'Previous orders count' | trans }}</dt>
                    <dd>{{ order.totalOrderCount }}</dd>
                    <dt>{{ 'Billing address' | trans }}</dt>
                    <dd>{{ order.billingAddress.salutation }}
                        {{ order.billingAddress.firstName }},
                        {{ order.billingAddress.lastName }}
                        {% if order.billingAddress.phone is not empty %}
                        ({{ 'order.view.billing.phone' | trans }}: {{ order.billingAddress.phone }})
                        {% endif %},
                        {{ order.billingAddress.address1 }},
                        {{ order.billingAddress.address2 }},
                        {{ order.billingAddress.address3 }},
                        {% if order.billingAddress.address4 is not empty %}
                            {{ order.billingAddress.address4 }},
                        {% endif %}
                        {{ order.billingAddress.company }},
                        {{ order.billingAddress.zipCode }},
                        {{ order.billingAddress.city }},
                        {% if order.billingAddress.state is not empty %}
                            {{ order.billingAddress.state }},
                        {% endif %}
                        {{ order.billingAddress.country.name}}
                        {% if order.billingAddress.vatNumber is not empty %}
                            ({{ 'order.view.billing.vat' | trans }}: {{ order.billingAddress.vatNumber }})
                        {% endif %}
                        <a href="{{ url('/sales/edit/address', {'id-sales-order': order.idSalesOrder, 'id-address': order.billingAddress.idSalesOrderAddress}) }}" class="btn btn-default edit_billing_address">{{ 'Edit' | trans }}</a>
                    </dd>
                </dl>
            </div>
        </div>
    {% endblock %}
{% endembed %}
