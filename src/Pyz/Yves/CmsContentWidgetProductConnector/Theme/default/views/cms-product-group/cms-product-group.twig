{% extends template('widget') %}

{% define data = {
    product: product | default,
    products: products | default([])
} %}

{% block body %}
    <div class="grid grid--stretch grid--with-gutter">
        {% for availableProduct in data.products if availableProduct.available %}
            {% widget 'CmsProductGroupWidget' args [availableProduct] only %}{% endwidget %}
        {% endfor %}
    </div>

    {% if data.product is not empty %}
        <div class="grid grid--stretch grid--with-gutter">
            {% widget 'CmsProductGroupWidget' args [data.product] only %}{% endwidget %}
        </div>
    {% endif %}
{% endblock %}
