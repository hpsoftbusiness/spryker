{% extends model('component') %}

{% define config = {
    name: 'banner-jumbotron',
    tag: 'section',
} %}

{% define data = {
    banner: required,
    isBannerClickable: true,
} %}

{% block body %}
    {% set backgroundImage = data.banner.imageUrl ? 'background-image: url(' ~ data.banner.imageUrl ~ ');' %}

    <div class="{{ config.name }}__container grid {% block bannerTextPosition %}grid--middle{% endblock %}" style="{{ backgroundImage }}">
        {% if data.isBannerClickable %}
            <a href="{{ data.banner.clickUrl }}" class="{{ config.name }}__link" {{ data.banner.openUrlInNewTab ? 'target="_blank"' }}></a>
        {% endif %}
        <div class="col col--sm-12 col--lg-8 col--xl-6">
            <div class="container">
                <div class="container__inner">
                    <div class="{{ config.name }}__content">
                        {% if data.banner.title is defined %}
                            <h1 class="{{ config.name }}__title">{{ data.banner.title | raw }}</h1>
                        {% endif %}

                        {% if data.banner.subtitle is defined %}
                            <p class="{{ config.name }}__text">{{ data.banner.subtitle | raw }}</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
