{% extends template('widget') %}

{% define data = {
    products: []
} %}

{% block body %}
    {% if data.products is not empty %}
        {% include molecule('extra-product', 'ProductRelationWidget') with {
            class: 'spacing-x spacing-x--big spacing-y spacing-y--biggest',
            data: {
                title: 'page.product.upsell-products' | trans,
                products: data.products,
                sliderConfig: '{
                    "slidesToShow": 6,
                    "dots": false,
                    "responsive": [
                        {
                            "breakpoint": 1440,
                            "settings": {
                                "slidesToShow": 5
                            }
                        },
                        {
                            "breakpoint": 1200,
                            "settings": {
                                "slidesToShow": 4
                            }
                        },
                        {
                            "breakpoint": 960,
                            "settings": {
                                "slidesToShow": 3
                            }
                        },
                        {
                            "breakpoint": 700,
                            "settings": {
                                "slidesToShow": 2
                            }
                        },
                        {
                            "breakpoint": 450,
                            "settings": {
                                "slidesToShow": 1
                            }
                        }
                    ]
                }',
            }
        } only %}
    {% endif %}
{% endblock %}


