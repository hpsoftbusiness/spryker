{% extends model('component') %}

{% define config = {
    name: 'success-page',
    tag: 'main'
} %}

{% define data = {
    title: '',
    message: ''
} %}

{% block body %}
    <div class="{{ config.name }}__image-wrapper">
        <img class="{{ config.name }}__image" src="{{ publicPath('images/success-page-image.png') }}" alt="">
    </div>
    <div class="{{ config.name }}__content">
        <h1 class="title title--checkout-success title--medium">{{data.title}}</h1>
        <h4 class="{{ config.name }}__subtitle">{{ 'checkout.step.success.sub_title' | trans }}</h4>
        <p class="{{ config.name }}__text">{{data.message}}</p>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
          <a class="link link--darkest link--without-underline" href="{{ url('customer/overview') }}">{{ 'checkout.step.success.link' | trans }}
              {% include atom('icon') with {
                  modifiers: ['small', 'checkout-success'],
                  data: {
                      name: 'chevron-right'
                  }
              } only %}
          </a>
        {% endif %}
    </div>
{% endblock %}
