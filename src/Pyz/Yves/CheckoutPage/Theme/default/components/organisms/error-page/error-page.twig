{% extends model('component') %}

{% define config = {
    name: 'error-page',
    tag: 'main'
} %}

{% define data = {
    title: '',
    message: '',
    errors: []
} %}

{% block body %}
    <div class="{{ config.name }}__image-wrapper">
        <img class="{{ config.name }}__image" src="{{ publicPath('images/success-page-image.png') }}" alt="">
    </div>
    <div class="{{ config.name }}__content">
        <h1 class="title title--checkout-success title--medium">{{data.title}}</h1>
        <h4 class="{{ config.name }}__subtitle">{{ 'checkout.step.error.sub_title' | trans }}</h4>
        <div class="{{ config.name }}__errors-container">
            {% for error in data.errors %}
                <li>{{ error }}</li>
            {% endfor %}
        </div>

      <a class="link link--darkest link--without-underline" href="{{ url('cart') }}">{{ 'checkout.step.error.link' | trans }}
          {% include atom('icon') with {
              modifiers: ['small'],
              data: {
                  name: 'chevron-right'
              }
          } only %}
      </a>
    </div>
{% endblock %}
