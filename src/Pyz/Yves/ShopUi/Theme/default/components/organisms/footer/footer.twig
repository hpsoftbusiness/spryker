{% extends model('component') %}

{% define config = {
    name: 'footer',
    tag: 'footer'
} %}

{% define data = {
    pathInfo: app.request.pathInfo,
    queryString: app.request.queryString,
    requestUri: app.request.requestUri,
} %}

{% block body %}
    {% set socialMediaItems = [
        {
            iconName: 'facebook',
            href: 'footer.facebook.url' | trans
        },
        {
            iconName: 'twitter',
            href: 'footer.twitter.url' | trans
        },
        {
            iconName: 'instagram',
            href: 'footer.instagram.url' | trans
        },
        {
            iconName: 'pinterest',
            href: 'footer.pinterest.url' | trans
        }
    ] %}

    {% set paymentItems = [
        {
            iconName: 'logo-mastercard',
        },
        {
            iconName: 'logo-visa',
        },
        {
            iconName: 'logo-visa-dinersclub',
        },
        {
            iconName: 'logo-amex',
        },
        {
            iconName: 'logo-sofort',
        }
    ] %}

    <div class="container">
        <div class="{{ config.name }}__top">
            <div>
                {% widget 'LanguageSwitcherWidget' args [
                    data.pathInfo,
                    data.queryString,
                    data.requestUri
                ] only %}
                {% endwidget %}
            </div>
            {% block footerNavigation %}
                {% include molecule('navigation-footer') with {
                    class: config.name ~ '__navigation',
                    data: {
                        items: [
                            {
                                title: 'global.categories',
                                isShow: data.showNavigation,
                                templates: [
                                    {
                                        template: 'navigation-footer',
                                        menu: 'FOOTER_NAVIGATION_CATEGORIES'
                                    }
                                ]
                            },
                            {
                                title: 'global.company',
                                templates: [
                                    {
                                        template: 'navigation-footer',
                                        menu: 'FOOTER_NAVIGATION'
                                    }
                                ]
                            },
                            {
                                title: 'global.social',
                                templates: [
                                    {
                                        template: 'navigation-footer',
                                        menu: 'SOCIAL_LINKS'
                                    }
                                ]
                            },
                            {
                                class: 'is-hidden-md-xl',
                                modifiers: ['flex'],
                                title: 'footer.providers__title',
                                templates: [
                                    {
                                        template: 'navigation-providers-shipment',
                                        menu: 'SHIPMENT_PROVIDERS',
                                        wrapClass: 'spacing-right spacing-right--big',
                                    },
                                    {
                                        template: 'navigation-providers-payment',
                                        menu: 'PAYMENT_PROVIDERS'
                                    }
                                ]
                            }
                        ]
                    }
                } only %}
            {% endblock %}
        </div>

        <div class="{{ config.name }}__bottom">
            <div class="{{ config.name }}__social">
                <span class="title title--h6 spacing-right is-hidden-sm-lg">{{ "footer.follow" | trans }}</span>
                {% for item in socialMediaItems %}
                    <a href="{{ item.href }}" target="_blank">
                        {% include atom('icon') with {
                            class: 'spacing-x col',
                            modifiers: ['big'],
                            data: {
                                name: item.iconName,
                            }
                        } only %}
                    </a>
                {% endfor %}
            </div>
            <div class="{{ config.name }}__payment">
                <span class="title title--h6 spacing-right is-hidden-sm-lg">{{ "global.partners" | trans }}</span>
                {% for item in paymentItems %}
                    <img class="spacing-x--small col" src="{{ publicPath('images/' ~ item.iconName ~ '.svg') }}" alt="{{ item.iconName }}">
                {% endfor %}
            </div>

            <div class="{{ config.name }}__partner title title--h6">
                <img class="spacing-x col" src="{{ publicPath('images/logo-motogp.svg') }}" alt="logo-motogp">
                <span class="spacing-left">{{ "footer.official_partner" | trans }}</span>
            </div>
        </div>

    </div>
{% endblock %}
