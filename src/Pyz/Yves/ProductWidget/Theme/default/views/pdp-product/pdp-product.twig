{% extends view('pdp-product', '@SprykerShop:ProductWidget') %}

{% block body %}
    {% set product = data.product %}
    {% include molecule('product-item') with {
        class: 'col col--sm-12 col--md-4',
        modifiers: ['stretch', 'medium-shadow'],
        data: {
            product: product,
            cashback: product.attributes.cashback_amount | default(null),
            shoppingPoints: product.attributes.shopping_points | default(null),
        },
    } only %}
{% endblock %}
