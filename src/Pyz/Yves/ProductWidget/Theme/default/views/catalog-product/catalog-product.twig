{% extends view('catalog-product', '@SprykerShop:ProductWidget') %}

{% block body %}
    {% set productTemplate = molecule('product-item') %}
    {% set class = 'col col--sm-12 col--md-6 col--lg-4 col--xl-3 col--with-gutter' %}

    {% if data.viewMode == 'list' %}
        {% set productTemplate = molecule('product-item-list') %}
        {% set class = '' %}
    {% endif %}

    {% set image = data.product.images | last %}

    {# TODO: benefitAmount and benefitSalesPrice will come from product price after finishing MYW-1057. #}
    {% embed productTemplate with {
        productTemplate: productTemplate,
        class: class,
        modifiers: ['with-bottom-spaces'],
        data: {
            product: data.product,
            image: image.external_url_small | default(null),
            name: data.product.abstract_name,
            idProductAbstract: data.product.id_product_abstract,
            cashback: data.product.cashback_amount[0] | default(null),
            shoppingPoints: data.product.shopping_points[0] | default(null),
            benefitAmount: data.product.attributes.benefit_amount[0] | default(null),
            benefitSalesPrice: data.product.attributes.benefit_store_sales_price[0] | default(null),
            shoppingPointsAmount: data.product.attributes.product_sp_amount[0] | default(null),
        },
    } only %}
        {% block labels %}
            {% widget 'ProductConcreteLabelWidget' args [data.product.id_product_labels] with {
                data: {
                    parentJsName: config.jsName,
                },
            } only %}{% endwidget %}
        {% endblock %}

        {% block rating %}{% endblock %}
    {% endembed %}
{% endblock %}
