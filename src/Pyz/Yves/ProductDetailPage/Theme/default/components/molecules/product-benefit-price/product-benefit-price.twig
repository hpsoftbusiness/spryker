{% extends model('component') %}

{% define config = {
    name: 'product-benefit-price',
} %}

{% define data = {
    regularPriceAmount: required,
    benefitPriceAmount: required,
    benefitCurrencyAmount: required,
    benefitCurrencyType: 'benefit-voucher',
} %}

{% block body %}
    <div class="spacing-top spacing-bottom">
            <span class="{{ config.name }}__title-text {{ config.name }}__title-text--{{ data.benefitCurrencyType }}">
                <h3>{{ 'Benefit price' | trans }}</h3>
            </span>
    </div>
    <div class="col">
        <div class="{{ config.name }}__benefit-price-amount--{{ data.benefitCurrencyType }}">
            {% include molecule('money-price') with {
                modifiers: ['pdp'],
                data: {
                    amount: data.benefitPriceAmount,
                    priceVatText: null
                }
            } only %}
                <div class="voucher">
                <span class="voucher-amount">&nbsp;+&nbsp;{{ data.benefitCurrencyAmount | money }}</span>
                &nbsp;&nbsp;<svg class="icon icon-allign-benefit" data-qa="component icon" title="benefit-point">
                    <use xlink:href="#:benefit-point"></use>
                </svg>
            </div>
        </div>
        <div class="row">
            <span class="{{ config.name }}__mode "> {{ 'pdp.include.vat' | trans }}</span>
        </div>
    </div>
{% endblock %}
