{% extends model('component') %}

{% define config = {
    name: 'product-benefit-price',
} %}

{% define data = {
    benefitPriceAmount: required,
    benefitAmount: required,
} %}

{% block body %}
    <div class="row spacing-top spacing-bottom">
        <span class="{{ config.name }}__title-text">
            {{ 'pdp.price.benefit_voucher_price' | trans }}
        </span>
    </div>

    <div class="{{ config.name }}__benefit-price-amount">
        {% include molecule('money-price') with {
            modifiers: ['pdp'],
            data: {
                amount: data.benefitPriceAmount,
                priceVatText: null
            }
        } only %}
        <span class="{{ config.name }}__plus">+</span>
        {% include molecule('money-price') with {
            modifiers: ['pdp'],
            data: {
                amount: data.benefitAmount,
                priceVatText: null
            }
        } only %}
        {% include atom('icon') with {
            class: config.name ~ '__icon',
            modifiers: ['medium-up'],
            data: {
                name: 'benefit-point',
            },
        } only %}
        <span class="{{ config.name }}__vat">
            {{ 'pdp.include.vat' | trans }}
        </span>
    </div>

{% endblock %}
