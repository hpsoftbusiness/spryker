{% extends model('component') %}

{% define config = {
    name: 'product-affiliate',
    tag: 'section'
} %}

{% define data = {
    product: required,
} %}

{% set productName = data.product.name | default %}

{% block body %}

    <h1 class="title title--product title--h2">{{ productName }}</h1>

    <div class="col text-right">
        {% include molecule('money-price') with {
            modifiers: ['pdp'],
            data: {
                amount: data.product.price,
                originalAmount: data.product.prices.ORIGINAL is not defined ? null : data.product.prices.ORIGINAL
            }
        } only %}
    </div>

    <div class="col">
        <div class="{{ config.name }}__button-wrap">
            <a class="button button--shadow button--large button--expand" target="_blank" href="{{ data.product.affiliateData.trackingUrl }}">
                {{ 'page.detail.affiliate-product-action' | trans }}
            </a>
        </div>
    </div>

    {% block colors %}{% endblock %}

{% endblock %}
