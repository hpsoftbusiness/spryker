{% extends molecule('suggestion-product', '@SprykerShop:CatalogPage') %}

{% define data = {
    isAffiliate: data.product.is_affiliate ?? data.product.isAffiliate,
    affiliateData:  data.product.affiliate_data ?? data.product.affiliateData,
    idProductAbstract: data.product.id_product_abstract ?? data.product.idProductAbstract,
} %}
{% block body %}
    {% widget 'ProductUrlWidget' args [
        data.isAffiliate,
        data.affiliateData,
        data.product.attributes ?? [],
        data.idProductAbstract
    ] with {
            data: {
            originUrl: data.url,
            suggestion: true,
            title: data.title,
            image: data.image,
            price: data.price,
            originalPrice: data.originalPrice ?? null,
            alt: data.alt,
            idProductAbstract: data.idProductAbstract,
        },
        } only %}{% endwidget %}
{% endblock %}
