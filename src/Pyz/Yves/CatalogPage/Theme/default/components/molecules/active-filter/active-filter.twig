{% extends molecule('active-filter', '@SprykerShop:CatalogPage') %}

{% block class %}
    {{ parent() }}
    spacing-left--reset
    {{ config.name }}__item
{% endblock %}

{% block body %}
    {{ ('product.filter.' ~ data.filter.config.name | lower) | trans }}: {{ data.value }}
    {% include atom('icon') with {
        modifiers: ['medium', 'close-filter'],
        data: {
            name: 'close-filter',
        },
    } only %}
{% endblock %}
