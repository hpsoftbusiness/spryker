{% extends template('widget') %}

{% define data = {
    productAbstractViewCollection: productAbstractViewCollection,
} %}

{% block body %}
    {% embed molecule('slick-carousel') with {
        modifiers: ['products'],
        data: {
            slides: data.productAbstractViewCollection,
        },
        attributes: {
            'data-json': '{
                "slidesToShow": 6,
                "dots": false,
                "arrows": true,
                "adaptiveHeight": true,
                "responsive": [
                    {
                        "breakpoint": 1440,
                        "settings": {
                            "slidesToShow": 5
                        }
                    },
                    {
                        "breakpoint": 1200,
                        "settings": {
                            "slidesToShow": 4
                        }
                    },
                    {
                        "breakpoint": 960,
                        "settings": {
                            "slidesToShow": 3
                        }
                    },
                    {
                        "breakpoint": 700,
                        "settings": {
                            "slidesToShow": 2
                        }
                    },
                    {
                        "breakpoint": 450,
                        "settings": {
                            "slidesToShow": 1
                        }
                    }
                ]
            }',
        },
    } only %}
        {% block slides %}
            {% for productAbstractView in data.slides if productAbstractView.available %}
                {% include molecule('product-item') with {
                    modifiers: ['medium-shadow'],
                    data: {
                        product: productAbstractView,
                    },
                } only %}
            {% endfor %}
        {% endblock %}
    {% endembed %}
{% endblock %}
