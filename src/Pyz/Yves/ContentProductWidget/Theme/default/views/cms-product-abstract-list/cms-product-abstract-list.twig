{% extends template('widget') %}

{% define data = {
    productAbstractViewCollection: productAbstractViewCollection,
} %}

{% block body %}
    <div class="grid grid--stretch grid--with-gutter">
        {% for productAbstractView in data.productAbstractViewCollection %}
            {% include molecule('product-item') with {
                class: 'col col--sm-6 col--lg-3 col--with-gutter',
                data: {
                    product: productAbstractView,
                },
            } only %}
        {% endfor %}
    </div>
{% endblock %}
