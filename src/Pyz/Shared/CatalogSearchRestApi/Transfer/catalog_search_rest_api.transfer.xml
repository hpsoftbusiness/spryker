<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="RestCatalogSearchAbstractProducts">
        <property name="url" type="string"/>
        <property name="fullUrl" type="string"/>
        <property name="isAffiliate" type="bool"/>
        <property name="affiliateData" type="array"/>
        <property name="brand" type="string"/>
        <property name="benefit" type="RestCatalogSearchProductBenefit"/>
        <property name="sellable" type="array"/>
        <property name="customerGroup" type="array"/>
        <property name="attributes" type="array"/>
        <property name="shoppingPoints" type="int"/>
        <property name="cashbackAmount" type="int"/>
        <property name="eliteClub" type="bool"/>
        <property name="eliteClubOnly" type="bool"/>
        <property name="benefitDeals" type="bool"/>
        <property name="bvDeal" type="BvDeal"/>
        <property name="shoppingPointDeals" type="bool"/>
        <property name="spDeal" type="SpDeal"/>
        <property name="customerGroup" type="array"/>
    </transfer>

    <transfer name="RestCatalogSearchProductBenefit">
        <property name="shoppingPoints" type="int"/>
        <property name="cashbackAmount" type="int"/>
    </transfer>

    <transfer name="RestCatalogSearchSuggestionAbstractProducts">
        <property name="shoppingPoints" type="int"/>
        <property name="cashbackAmount" type="int"/>
    </transfer>

    <transfer name="BvDeal">
        <property name="bvItemPrice" type="int"/>
        <property name="bvAmount" type="int"/>
    </transfer>

    <transfer name="SpDeal">
        <property name="spItemPrice" type="int"/>
        <property name="spAmount" type="int"/>
    </transfer>

</transfers>
